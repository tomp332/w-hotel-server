<!doctype html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>W-Hotels</title>
    <link type="image/png" href="/css/images/black_logo.png">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/css/all.min.css">
    <link rel="stylesheet" href="/css/home.css" type="text/css">
    <link rel="stylesheet" href="/css/reservations.css">
</head>
<main>
    <div class="reservations-class">
        <div class="container">
            <% if(allReservations.length > 0 ){ %>
                <!-- <h2 class="main-sub-heading">.</h2> -->
                <h2 class="main-sub-heading">Hello Admin</h2>
                <h2 class="main-sub-heading">All Reservations:</h2>
                <!--Reservations Table-->
                <table id="reservations-table" class="reservations-table">
                    <thead>
                    <tr>
                        <th>Reservation Id</th>
                        <th>Hotel Name</th>
                        <th>Country</th>
                        <th>City</th>
                        <th>Address</th>
                        <th>Suites</th>
                        <th>Standard Rooms</th>
                        <th>Check In</th>
                        <th>Check Out</th>
                        <th></th>
                        <th></th>
                    </tr>
                    </thead>
                    <tbody>
                    <% for (var i = 0; i < allReservations.length ; i++) { %>
                        <tr id="row-<%= i %>">
                            <td id="reservationId-<%= i %>"><%= allReservations[i].reservationId %></td>
                            <td id="hotelName-<%= i %>"><%= allReservations[i].hotelName %></td>
                            <td id="country-<%= i %>"><%= allReservations[i].country %></td>
                            <td id="city-<%= i %>"><%= allReservations[i].city %></td>
                            <td id="fullAddress-<%= i %>"><%= allReservations[i].fullAddress %></td>
                            <td id="suiteRoomAmount-<%= i %>"><%= allReservations[i].suiteRoomAmount %></td>
                            <td id="regularRoomAmount-<%= i %>"><%= allReservations[i].regularRoomAmount %></td>
                            <td id="checkIn-<%= i %>"><%= allReservations[i].checkIn.toISOString().replace('-', '/').split('T')[0].replace('-', '/') %></td>
                            <td id="checkOut-<%= i %>"><%= allReservations[i].checkOut.toISOString().replace('-', '/').split('T')[0].replace('-', '/') %></td>
                            <!-- buttons -->
                            <td><input type="button" id='edit_button' value="Edit" class="button"
                                       onclick="edit_row(<%= i %>)">
                                <input type="button" id="save_button" value="Save" class="save"
                                       onclick='save_row("<%= i %>", "<%= allReservations[i].reservationId %>")'>
                            </td>
                            <td>
                                <input type="button" id='delete-<%= i %>' value="Delete" class="button delete-buttons" onclick="delete_row(<%= i %>)"/>
                            </td>
                        </tr>
                    <% } %>
                    </tbody>
                </table>
            <% } else{ %>
                <h2 class="main-sub-heading">You have no reservations yet :(</h2>
                <a href="/hotels" class="btn btn-gradient">Book Now
                    <span>
                        <div class="dots">
                            <i class="fas fa-allipsis-h"></i>
                        </div>
                    </span>
                </a>
            <% } %>
        </div>
    </div>
</main>

<main>
    <div class="reservations-class">
        <div class="container">
            <% if(hotels.length > 0 ){ %>
                <!-- <h2 class="main-sub-heading">.</h2> -->
                <h2 class="main-sub-heading">Hotels:</h2>
                <!--Reservations Table-->
                <table id="reservations-table" class="reservations-table">
                    <thead>
                    <tr>
                        <th>Hotel Id</th>
                        <th>Hotel Name</th>
                        <th>Rating</th>
                        <th>Address</th>
                        <th>PricePerNight</th>
                        <th>Location</th>
                        <th>Guest Reviews</th>
                        <th></th>
                        <th></th>
                    </tr>
                    </thead>
                    <tbody>
                    <% for (let i = 0; i < hotels.length ; i++) { %>
                        <tr id="row-<%= i %>">
                            <td id="hotelId-<%= i %>"><%= hotels[i].hotelId %></td>
                            <td id="hotelsName-<%= i %>"><%= hotels[i].hotelName %></td>
                            <td id="rating-<%= i %>"><%= hotels[i].rating.numStars %></td>
                            <td id="address-<%= i %>"><%= hotels[i].address.fullAddress %></td>
                            <td id="pricePerNight-<%= i %>"><%= hotels[i].pricePerNight %></td>
                            <td id="location-<%= i %>"><%= hotels[i].address.city %></td>
                            <td id="guestReviews-<%= i %>"><%= hotels[i].guestReviews.avgRating %></td>
                            <td><input type="button" id='edit_hotel_button' value="Edit" class="button"
                                       onclick="edit_hotel_row(<%= i %>)">
                                <input type="button" id="save_hotel_button" value="Save" class="save" onclick='save_hotel_row("<%= i %>")'>
                            </td>
                            <td>
                                <input type="button" id='delete-<%= i %>' value="Delete" class="button delete-buttons" onclick="delete_hotel_row(<%= i %>)"/>
                            </td>
                    <% } %>
                    </tbody>
                </table>
                <% } else{ %>
                    <h2 class="main-sub-heading">You have no reservations yet :(</h2>
                    <a href="/hotels" class="btn btn-gradient">Book Now
                        <span>
                        <div class="dots">
                            <i class="fas fa-allipsis-h"></i>
                        </div>
                    </span>
                    </a>
            <% } %>
        </div>
    </div>
</main>

